<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:background="@color/colorBack">

    <TextView
        android:id="@+id/movieTrends"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="1"
        android:text="           Film tendance au cinerma"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Title"
        android:textColor="@color/colorWhite" />

    <LinearLayout
        android:id="@+id/moviesByTrends"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/movieTrend1"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/movieTrendPoster1"
                android:layout_width="match_parent"
                android:layout_height="112dp" />

            <TextView
                android:id="@+id/movieTrendTitle1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="none"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/movieTrend2"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/movieTrendPoster2"
                android:layout_width="match_parent"
                android:layout_height="111dp" />

            <TextView
                android:id="@+id/movieTrendTitle2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="none"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/movieTrend3"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/movieTrendPoster3"
                android:layout_width="match_parent"
                android:layout_height="112dp" />

            <TextView
                android:id="@+id/movieTrendTitle3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="none"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/Red_Line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorRed"
        android:visibility="visible" />

    <TextView
        android:id="@+id/showTrends"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_weight="1"
        android:text="           Film par catÃ©gorie"
        android:textAppearance="@android:style/TextAppearance.Widget.ActionBar.Title"
        android:textColor="@color/colorWhite" />

    <LinearLayout
        android:id="@+id/showsByTrends"
        android:layout_width="406dp"
        android:layout_height="220dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/showTrend1"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/showTrendPoster1"
                android:layout_width="match_parent"
                android:layout_height="114dp" />

            <TextView
                android:id="@+id/showTrendTitle1"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:text="none"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/showTrend2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/showTrendPoster2"
                android:layout_width="126dp"
                android:layout_height="115dp" />

            <TextView
                android:id="@+id/showTrendTitle2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="none"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/showTrend3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/showTrendPoster3"
                android:layout_width="120dp"
                android:layout_height="116dp" />

            <TextView
                android:id="@+id/showTrendTitle3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="none"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>